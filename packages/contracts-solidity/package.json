{
  "name": "@gamedao/contracts-solidity",
  "version": "3.0.0",
  "description": "GameDAO Protocol Solidity Smart Contracts",
  "main": "index.js",
  "scripts": {
    "build": "hardhat compile && pnpm run update:shared && pnpm run build:shared",
    "build:shared": "cd ../shared && pnpm run build",
    "update:shared": "node scripts/update-shared-package.js",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:localhost": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "deploy:membership-localhost": "hardhat run scripts/deploy-with-membership-integration.ts --network localhost",
    "deploy:membership-testnet": "hardhat run scripts/deploy-with-membership-integration.ts --network sepolia",
    "deploy:membership-mainnet": "hardhat run scripts/deploy-with-membership-integration.ts --network mainnet",
    "measure-contracts": "hardhat run scripts/measure-contract-sizes.ts --network localhost",
    "scaffold": "hardhat run scripts/scaffold.ts --network localhost",
    "scaffold:copy": "node scripts/copy-scaffold-data.js",
    "scaffold:full": "pnpm run scaffold && pnpm run scaffold:copy",
    "test-interactions": "hardhat run scripts/test-interactions.ts --network localhost",
    "create-profiles": "hardhat run scripts/create-profiles.ts --network localhost",
    "send-tokens": "hardhat run scripts/send-tokens.ts --network localhost",
    "grant-admin": "hardhat run scripts/grant-admin.ts --network localhost",
    "migrate-staking": "hardhat run scripts/migrate-staking.ts --network localhost",
    "verify": "hardhat verify",
    "node": "hardhat node --hostname 0.0.0.0",
    "node:quiet": "hardhat node --hostname 0.0.0.0 > /dev/null 2>&1",
    "clean": "hardhat clean",
    "typechain": "hardhat typechain",
    "lint": "echo 'Linting not configured yet'",
    "lint:fix": "echo 'Linting not configured yet'",
    "format": "echo 'Formatting not configured yet'",
    "size": "hardhat size-contracts"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@gamedao/evm": "workspace:*"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.0",
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "ethers": "^6.7.1",
    "hardhat": "^2.17.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.3.1",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart-contracts",
    "dao",
    "gaming",
    "web3"
  ],
  "license": "AGPL-3.0"
}
