# GameDAO Protocol - Local Environment Template
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local files to git!

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================

# Local development chain
NEXT_PUBLIC_CHAIN_ID=31337
NEXT_PUBLIC_RPC_URL=http://localhost:8545

# Contract addresses (filled automatically by deployment)
NEXT_PUBLIC_CONTROL_ADDRESS=
NEXT_PUBLIC_FLOW_ADDRESS=
NEXT_PUBLIC_SIGNAL_ADDRESS=
NEXT_PUBLIC_SENSE_ADDRESS=
NEXT_PUBLIC_TREASURY_ADDRESS=
NEXT_PUBLIC_REGISTRY_ADDRESS=
NEXT_PUBLIC_GAME_TOKEN_ADDRESS=
NEXT_PUBLIC_USDC_ADDRESS=

# ===========================================
# IPFS CONFIGURATION
# ===========================================

# Pinata (recommended for production)
NEXT_PUBLIC_PINATA_API_KEY=your_pinata_api_key_here
NEXT_PUBLIC_PINATA_SECRET_KEY=your_pinata_secret_key_here

# Alternative: IPFS node
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/
NEXT_PUBLIC_IPFS_API_URL=https://api.pinata.cloud

# ===========================================
# GRAPH PROTOCOL
# ===========================================

# Subgraph endpoints
NEXT_PUBLIC_SUBGRAPH_URL=http://localhost:8000/subgraphs/name/gamedao/protocol
NEXT_PUBLIC_GRAPH_API_KEY=your_graph_api_key_here

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Error tracking
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Debug mode
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_ENABLE_TESTNETS=true

# App configuration
NEXT_PUBLIC_APP_NAME=GameDAO Protocol
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DESCRIPTION=Decentralized gaming organization protocol

# ===========================================
# SECURITY NOTES
# ===========================================

# 1. Never commit this file to git
# 2. Use different values for production
# 3. Rotate API keys regularly
# 4. Use environment-specific values
# 5. Consider using a secrets management service for production
